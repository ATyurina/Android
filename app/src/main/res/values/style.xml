<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Widget.AppTheme.LikeButton" parent="Widget.MaterialComponents.Button.TextButton.Icon">
        <item name="iconTint">@color/like_selector</item>
        <item name="android:textColor">?attr/colorControlNormal</item>
        <item name="android:minWidth">0dp</item>
        <item name="backgroundTint">@android:color/transparent</item>
    </style>

    <style name="Widget.AppTheme.ShareButton" parent="Widget.MaterialComponents.Button.TextButton.Icon">
        <item name="iconTint">@android:color/darker_gray</item>
        <item name="android:textColor">?attr/colorControlNormal</item>
        <item name="android:minWidth">0dp</item>
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:padding">5dp</item>
        <item name="android:minHeight">0dp</item>
    </style>

    <style name="Widget.AppTheme.MenuButton" parent="Widget.MaterialComponents.Button.TextButton.Icon">
        <item name="iconTint">@color/design_default_color_primary</item>
        <item name="android:minWidth">0dp</item>
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:padding">5dp</item>
        <item name="android:minHeight">0dp</item>
    </style>

    <style name="Widget.AppTheme.OptionalButton" parent="Widget.MaterialComponents.Button.TextButton.Icon">
        <item name="iconTint">@color/purple_500</item>
        <item name="android:minWidth">0dp</item>
    </style>

</resources>
